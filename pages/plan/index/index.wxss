/* index.wxss */
@font-face
{
font-family: Number;
src: url('https://mall.rjfittime.com/static/eshop/scss/logic/activity/jzy/num.otf');
}
.planIndex-topBox{
  width: 100%;
  height: 996rpx;
  position: relative;
  z-index: 1;
  color:#fff;
}
.planIndex-bg{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 996rpx;
  z-index: 0;
}

.topBox-tipsBox{
  margin-top: 222rpx;
  margin-left: 152rpx;
  position: relative;
}

.topBox-day{
  display: inline-block;
  font-size: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-weight: bold;
  padding-right: 22rpx;
  position: relative;
}
.topBox-day-img{
  position: absolute;
  width: 10rpx;
  height: 16rpx;
  top: 16rpx;
  right: 0;
}

.topBox-level-tips{
  font-size: 32rpx;
  height: 40rpx;
  line-height: 40rpx;
  display: inline-block;
}
.topBox-level-num{
  display: inline-block;
  font-size: 24rpx;
  font-weight: bold;
  font-style: italic;
  border:1rpx solid rgba(255,255,255,0.4);
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
  margin-left: 20rpx;
  text-align: center;
}

.topBox-hello{
  margin-top: 50rpx;
  font-size: 60rpx;
  line-height: 70rpx;
  font-weight: bold;
}
.topBox-level{
  margin-top: 50rpx;
}

.topBox-level-num .num{
  margin-left: 10rpx;
}

.topParams{
  position: absolute;
  z-index: 1;
  left: 0;
  right: 0;
  bottom: 100rpx;
}

.topParams-list{
  width: 587rpx;
  height: 91rpx;
  margin:0 auto;
  display: flex;
  flex-direction: row;
}
.topParams-line{
  display: block;
  width: 1rpx;
  height: 50rpx;
  background: rgba(255,255,255,0.2);
  margin-top: 20rpx;
}
.topParams-item{
  flex: 1;
  text-align: center;
}
.topParams-num{
  font-size: 48rpx;
  height: 48rpx;
  font-weight: bold;
  line-height: 48rpx;
  display: block;
  width: 190rpx;
  overflow: hidden;
}
.topParams-txt{
  font-size: 20rpx;
  line-height: 20rpx;
}

.topParams-btn{
  width: 482rpx;
  height: 100rpx;
  display: block;
  margin:0 auto;
  background: rgba(255,255,255,0.2);
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  line-height: 100rpx;
  border-radius:50rpx;
  margin-top: 40rpx;
}

.planList-title{
  padding-left: 60rpx;
  display: block;
  width: 100%;
  margin-top: 40rpx;
  box-sizing: border-box;
}

.planList-title-val{
  font-size: 40rpx;
  line-height: 40rpx;
  font-weight: bold;
  position: relative;
  width: 100%;
}
.planList-more{
  position: absolute;
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding-right: 20rpx;
  right: 30rpx;
  top:0rpx;
  text-align: right;
  width: 110rpx;
  color: rgba(0,0,0,0.8);
}
.planList-more-img{
  position: absolute;
  width: 10rpx;
  height: 16rpx;
  top: 12rpx;
  right: 0;
}

.planList-title-tips{
  font-size: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  color:rgba(0,0,0,0.4);
}

.planList{
  height: 492rpx;
  width: 100%;
  margin-top: 40rpx;
  padding-bottom: 160rpx;
}
.planList-wrap{
  padding-left:30rpx;
  padding-right: 60rpx;
  display: flex;
  flex-direction: row;
  height: 492rpx;
  width: 1720rpx;
}

.planList-item{
  margin-left: 30rpx;
  height: 492rpx;
  width: 400rpx;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
}
.planList-item-opc{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  z-index: 2;
  background: rgba(0,0,0,0.2);
}
.planList-item-img{
  display: block;
  width: 100%;
  height: 100%;
}
.planList-item-title{
  display: block;
  position: absolute;
  z-index: 3;
  bottom: 20rpx;
  width: 360rpx;
  left: 20rpx;
  overflow: hidden;
  font-size: 32rpx;
  color:#fff;
}