.container,page{
  width:100%;
  height: 100%;
}
.bg{
  position: absolute;
  z-index: 0;
  width:100%;
  height: 100%;
}
.cardBox{
  width: 100%;
  box-sizing: border-box;
  padding:28rpx 0rpx;
  position: relative;
  z-index: 2;
}


.card-item{
  width:100%;
  background:#fff;
  display: flex;
  height: 220rpx;
  align-items: center;
  justify-content: center;
  flex-direction: row;
  position: relative;
  z-index: 10;
  border-radius:10rpx;
  box-sizing: border-box;
  padding-left: 60rpx;
  border-bottom:1rpx solid #f3f3f3;
}

.card-item .card-dkbtn{
  width: 287rpx;
  height: 100%;
  box-sizing: border-box;
  position: relative;
}

.card-item .card-dkbtn .text{
  width: 165rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  text-align: center;
  position: absolute;
  z-index:20;
  left: 60rpx;
  top: 50%;
  transform: translateY(-50%);
  border-radius: 30rpx;
  background: #ff6000;
  color:#fff;
  font-weight: bold;
}
.card-item .card-dkbtn .text.dis{
  background:#666;
}

.card-item .card-title{
  flex: 1;
  height: 190rpx;
  line-height: 190rpx;
  font-size: 36rpx;
  position: relative;
  display: flex;
  flex-direction:column;
  justify-content: center;
}
.card-item .card-title-val{
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  width: 100%;
  line-height: 1;
}

.card-item .card-title-tmp{
  display: block;
  color:#8c8c8c;
  font-size: 24rpx;
  line-height: 30rpx;
  height: 30rpx;
  width: 100%;
  margin-top: 10rpx;
}

.card-item .card-imgbox{
  width:185rpx;
}
.card-item .dinner{
  display: block;
  width:155rpx;
  height: 105rpx;
}
.card-item .breakfast{
  display: block;
  width:112rpx;
  height: 130rpx;
}

.card-item .lunch{
  display: block;
  width:135rpx;
  height: 106rpx;
}
.card-item .dinner{
  display: block;
  width:130rpx;
  height: 130rpx;
}
.card-item .snack{
  display: block;
  width:106rpx;
  height: 123rpx;
}
.card-item .training{
  display: block;
  width:120rpx;
  height: 120rpx;
}
.card-item .bodydata{
  display: block;
  width:124rpx;
  height: 121rpx;
}
.card-item .werun{
  display: block;
  width:120rpx;
  height: 120rpx;
}
.card-item .card-dkbtn .alow{
  background:#2cb190;
  color:#fff;
}

.cardtopopc{
  position: fixed;
  top: 0;
  left: 0;
  height: 25rpx;
  width: 100%;
  z-index: 10;
}

.netError{
  position: absolute;
  width: 363rpx;
  height: 355rpx;
  left: 50%;
  top:50%;
  transform: translate3d(-50%,-50%,0);
}






.card-dkbtn .ani{
  width: 165rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 50rpx;
  text-align: center;
  position: absolute;
  z-index:21;
  left: 60rpx;
  top: 70rpx;
  transform: scale(0,0);
  border-radius: 30rpx;
  color:#ff6000;
  font-weight: bold;
}
.card-dkbtn.breakfastAni .breakfast,
.card-dkbtn.lunchAni .lunch,
.card-dkbtn.dinnerAni .boddinnerydata,
.card-dkbtn.trainingAni .training,
.card-dkbtn.bodydataAni .bodydata,
.card-dkbtn.werunAni .werun{
  display: block;
  top:0;
  transform:scale(1,1);
  opacity: 0;
  transition-duration: 1200ms;
}