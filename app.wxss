/**app.wxss**/
.container {
  height: 100%;
  width:100%;
  overflow-x: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  color:#323232;
  font-family: Regular,PingFangSC-Light;
}

.placeholderStyle{
  font-size: 30rpx;
  color:#b8b8b8;
}

.lineDot{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  -webkit-line-clamp: 1;
}
.linesDot{
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}

/*下面是网络错误提示样式*/
.applet-netError-view{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 10000;
  display: flex;
  align-items: center;
  justify-content: center;
}
.applet-netError-view-image{
  width: 363rpx;
  height: 355rpx;
  display: block;
}
