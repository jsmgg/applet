.search-layer {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    transition: transform .3s;
    background: white;
    z-index: 4;
    color: rgba(0, 0, 0, .85);
}

.addBox{
  height: 100rpx;
  padding:0 40rpx;
  position: relative;
  margin-top: 50rpx;
}
.addBox .input{
  display: block;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  background-color:#f5f5f5;
  border-radius: 50rpx;
  padding:0 145rpx 0 40rpx;
  overflow: hidden;
  color: black;
}
.addBox .input_placeholder {
  font-size: 30rpx;
  color:rgba(0,0,0,0.35);
}
.addBox .cancel{
  position: absolute;
  width: 140rpx;
  height: 90rpx;
  line-height: 90rpx;
  background:#2cb190;
  color:#fff;
  text-align: center;
  font-size: 32rpx;
  right: 45rpx;
  top: 5rpx;
  border-radius: 45rpx;
  z-index: 2;
}

.train-list{
  width: 100%;
  box-sizing: border-box;
  padding:15rpx 80rpx;
}
.train-list .scrollItem{
  width: 100%;
  height: 134rpx;
  line-height: 134rpx;
  border-bottom:1rpx solid rgba(0,0,0,0.05);
  font-size: 30rpx;
  color:rgba(0,0,0,0.85);
}
.train-list .define{
  color:#2cb190;
}