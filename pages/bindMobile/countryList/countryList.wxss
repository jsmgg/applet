.countryList{
  position: fixed;
  left:0;
  top:0;
  bottom:0;
  right:0;
  overflow:hidden;
  z-index:2;
  background:#fff;
  display: flex;
  flex-direction: column;
}
.countryList .selecttips{
  height: 88rpx;
  line-height: 88rpx;
  width:100%;
  text-align: center;
}

.countryScrollList{
  flex: 1;
  width:100%;
  overflow-y: scroll;
}

.countryScrollList .ctitle{
  background:#F7F7F7;
  height: 88rpx;
  line-height: 88rpx;
  width:100%;
  text-indent: 30rpx;
  color:#d8d8d8;
}
.countryScrollList .cname{
  background:#fff;
  height: 88rpx;
  line-height: 88rpx;
  width:100%;
  border-bottom:1rpx solid #f2f2f2;
}
.countryScrollList .countryBox{
  padding-left: 30rpx;
}