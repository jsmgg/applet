/* pages/components/keyboard/index.wxss */
.com-keyboard{
  width: 100%;
}

.com-keyboard .items{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  border-top: 1rpx solid #e9e9e9;
}

.com-keyboard .items .item{
  flex: 1;
  height: 100%;
  text-align: center;
  border-left: 1rpx solid #e9e9e9;
  font-size: 42rpx;
  color:#333;
}
.com-keyboard .items .item:first-child{
  border-left: none;
}

.com-keyboard .items .item-hover{
  background-color: #e9e9e9;
}
.com-keyboard .items .item .item-img{
  width: 44rpx;
  height: 32rpx;
}