.playWait{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  overflow: hidden;
}

.playWait-bg{
  position:absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.playWait-opc{
  position:absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  background: rgba(255,255,255,0.95);
}

.playWait-box{
  position: absolute;
  width: 100%;
  left: 0;
  top: 50%;
  z-index: 10;
  transform: translateY(-50%);
}
.playWait-title{
  font-size: 80rpx;
  width: 100%;
  text-align: center;
}
.playWait-loading{
  margin-top: 60rpx;
  width: 100%;
  height: 330rpx;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.playWait-radius{
  display: block;
  width: 330rpx;
  height: 330rpx;
  margin-left:-165rpx; 
  position: absolute;
  left: 50%;
  top: 0;
  z-index: 2;
}
.playWait-pro{
  width: 330rpx;
  height: 330rpx;
  position: absolute;
  z-index: 3;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  color:#2cb190;
}
.playWait-num{
  font-size: 100rpx;
  line-height: 330rpx;
}
.playWait-util{
  font-size: 50rpx;
}

.playWait-tipsBox{
  width: 100%;
}
.playWait-tips1{
  font-size: 28rpx;
  line-height: 28rpx;
  margin-top: 50rpx;
  color:rgba(0,0,0,0.7);
  text-align: center;
  display: block;
  width: 100%;
}
.playWait-tips2{
  display: block;
  width: 100%;
  font-size: 40rpx;
  line-height: 40rpx;
  text-align: center;
  margin-top: 20rpx;
}
.playWait-btn{
  width: 260rpx;
  height: 70rpx;
  border-radius: 35rpx;
  background:#2cb190;
  color:#fff;
  line-height: 70rpx;
  text-align: center;
  font-size: 30rpx;
  margin:129rpx auto 0 auto;
}