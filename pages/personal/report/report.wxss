/* pages/personal/report/report.wxss */
@font-face
{
font-family: Number;
src: url('https://mall.rjfittime.com/static/eshop/scss/logic/activity/jzy/num.otf');
}
page{
  width: 100%;
  height: 100%;
  background: #f6f6f6;
}
.container{
  width:100%;
  height: 100%;
}
.contentBox{
  width:100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.blank{
  width: 100%;
  margin-top: 50rpx;
}
.report-list{
  width: 628rpx;
  height: 158rpx;
  margin: 0 41rpx 30rpx 41rpx;
}
.report-box{
  width: 100%;
  height: 96rpx;
  background: #fff;
  padding: 30rpx 0 30rpx 40rpx;
}
.report-new{
  width: 120rpx;
  height: 50rpx;
  float: right;
  margin-top:-26rpx;
  margin-right:24rpx;
}
.report-right{
  width: 16rpx;
  height: 28rpx;
  float: right;
  margin-top:-16rpx;
  margin-right:30rpx;
}
.report-name{
  font-size: 34rpx;
  font-weight: 700;
  color: #848484;
}
.deep_color{
  color: #333;
}
.report-stage{
  font-size: 25rpx;
  color: #8c8c8c;
}
.report-status{
  font-size: 20rpx;
  line-height: 34rpx;
  color: #37b59d;
  background: #e9f7f3;
  border-radius: 12rpx;
  padding: 0 15rpx;
  margin-left: 12rpx;
}
.no_report {
  text-align: center;
  margin-top: 100rpx;
}