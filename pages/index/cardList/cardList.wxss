.cardList{
  position: fixed;
  z-index: 101;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background: rgba(22,23,23,0.9);
  padding:0 20rpx;
}

.cardList .card-item{
  width:100%;
  background:#fff;
  display: flex;
  height: 220rpx;
  align-items: center;
  justify-content: center;
  flex-direction: row;
  position: relative;
  z-index: 10;
  border-radius:10rpx;
  box-sizing: border-box;
  padding-left: 60rpx;
  border-bottom:1rpx solid #f3f3f3;
}

.cardList .card-item .card-dkbtn{
  width: 287rpx;
  height: 100%;
  box-sizing: border-box;
  position: relative;
}

.cardList .card-item .card-dkbtn .text{
  width: 165rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  text-align: center;
  position: absolute;
  z-index:20;
  left: 60rpx;
  top: 50%;
  transform: translateY(-50%);
  border-radius: 30rpx;
  background: #ff6000;
  color:#fff;
  font-weight: bold;
}
.cardList .card-item .card-dkbtn .text.dis{
  background:#666;
}

.cardList .card-item .card-title{
  flex: 1;
  height: 190rpx;
  line-height: 190rpx;
  font-size: 36rpx;
  position: relative;
  display: flex;
  flex-direction:column;
  justify-content: center;
}
.cardList .card-item .card-title-val{
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  width: 100%;
  line-height: 1;
}

.cardList .card-item .card-title-tmp{
  display: block;
  color:#8c8c8c;
  font-size: 24rpx;
  line-height: 30rpx;
  height: 30rpx;
  width: 100%;
  margin-top: 10rpx;
}

.cardList .card-item .card-imgbox{
  width:185rpx;
}
.cardList .card-item .dinner{
  display: block;
  width:155rpx;
  height: 105rpx;
}
.cardList .card-item .breakfast{
  display: block;
  width:112rpx;
