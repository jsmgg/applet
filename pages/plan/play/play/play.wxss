.playView{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  z-index: 0;
  background: rgba(0,0,0,0.55);
}
.playView-video{
  width: 100%;
  position: fixed;
  overflow: hidden;
  z-index: 10;
  left: 0;
  top: 0;
  bottom: 200rpx;
}
.playView-video-label{
  display: block;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  overflow: hidden;
}
.playView-coverView-bg{
  position: fixed;
  left: 0;
  right: 0;
  top:0;
  background: rgba(255,255,255,0.85);
  bottom: 260rpx;
  width: 100%;
  z-index: 10;
}
.playView-coverView-box{
  width: 100%;
  position: absolute;
  z-index: 10000;
  left: 0;
  right: 0;
  top: 50%;
  transform: translateY(-50%) translateZ(100rpx);
}
.playView-coverView-tips{
  font-size: 40rpx;
  line-height: 40rpx;
  color:rgba(0,0,0,0.7);
  text-align: center;
  width: 100%;

}
.playView-coverView-title{
  width: 635rpx;
  text-align: center;
  margin:0 auto;
  font-size: 80rpx;
  color:#333;
  line-height: 80rpx;
  margin-top: 60rpx;
}
.playView-coverView-start{
  width: 100%;
  font-size: 160rpx;
  text-align: center;
  font-weight: bold;
}
.playView-coverView-bottom{
  position: fixed;
  left: 0;
  bottom: 140rpx;
  width: 100%;
  box-sizing: border-box;
  padding:4rpx 30rpx 0 30rpx;
  height: 64rpx;
  line-height: 60rpx;
  background: rgba(0,0,0,0.55);
  color:#fff;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  z-index: 2;
}
.playView-coverView-txt{
  flex: 1;
  line-height: 60rpx;
}
.playView-coverView-time{
  line-height: 60rpx;
  width: 150rpx;
  text-align: right;
}


.playView-btn{
  left: 0;
  bottom:0;
  width: 100%;
  height: 140rpx;
  position: absolute;
  background: #fff;
}

.playView-prev{
  width: 41rpx;
  height: 46rpx;
  position: absolute;
  left: 36rpx;
  top:47rpx;
  z-index: 3;
  overflow: inherit;
}
.playView-next{
  width: 41rpx;
  height: 46rpx;
  position: absolute;
  right: 36rpx;
  top:47rpx;
  transform: rotateZ(180deg);
  z-index: 3;
  overflow: inherit;
}
.playView-next::after,.playView-prev::after,.playView-stop::after{
  content:'';
  position: absolute;
  left: -20rpx;
  top: -23rpx;
  width: 82rpx;
  height: 92rpx;
  z-index: 4;
}
.playView-stop{
  width: 41rpx;
  height: 46rpx;
  position: absolute;
  right: 36rpx;
  top:47rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 3;
  overflow: inherit;
}
.playView-pro{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  background-color:#2cb190;
  transition-timing-function: linear;
}