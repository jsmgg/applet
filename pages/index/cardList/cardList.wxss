}






.cardList .cardListbtn{
  width: 308rpx;
  height: 166rpx;
  padding-top: 25rpx;
  left: 50%;
  transform:translateX(-50%);
  bottom: 0;
  position: absolute;
}
.cardList .cardListCancel{
  position: absolute;
  left: 0;
  right:0;
  top: 60rpx;
  font-size: 32rpx;
  text-align: center;
  color: #fff;

}
.cardList .cardList-img{
  display: block;
  width: 100%;
  height: 100%;
}